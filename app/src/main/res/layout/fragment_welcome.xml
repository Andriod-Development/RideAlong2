<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.ridealong.WelcomeActivityFragment"
    tools:showIn="@layout/activity_welcome">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:text="Welcome!!"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/Crimson"
        android:textSize="35dp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/driver"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="226dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/ic_drive_eta_black_24dp"
        android:text="Share My Car"
        android:textAlignment="center"
        android:visibility="visible" />

    <Button
        android:id="@+id/rider"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/ic_airline_seat_recline_normal_black_24dp"
        android:text="Get A Ride"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/u_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/colorAccent"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/u_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="18sp" />

    <!--<TextView-->
    <!--android:id="@+id/u_logout"-->
    <!--android:textSize="18sp"-->
    <!--android:layout_marginTop="20dp"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->

    <Button
        android:id="@+id/btn_logout"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/colorPrimary"
        android:text="Logout"
        android:textColor="@android:color/white" />

</LinearLayout>
