<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    tools:context="com.ridealong.PassengerActivityFragment"
    tools:showIn="@layout/activity_passenger"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Passenger Details"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pfrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/ic_location_on_black_24dp"
        android:editable="true"
        android:hint="From" />

    <EditText
        android:id="@+id/pto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/ic_location_on_black_24dp"
        android:editable="true"
        android:hint="To" />

    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <!--<EditText-->
    <!--android:id="@+id/ptime"-->
    <!--android:layout_width="155dp"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignParentRight="true"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:editable="true"-->
    <!--android:ems="10"-->
    <!--android:hint="Time"-->
    <!--android:inputType="time" />-->

    <EditText
        android:id="@+id/pdate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:drawableLeft="@mipmap/ic_date_range_black_24dp"
        android:editable="true"
        android:ems="44"
        android:focusable="false"
        android:hint="Date"
        android:textSize="20dp"
        android:layout_weight="0.04" />

    <Button
        android:id="@+id/pbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="Submit"
        android:textStyle="bold" />

</LinearLayout>

