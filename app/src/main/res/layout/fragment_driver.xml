<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp"
    android:weightSum="1"
    tools:context=".DriverActivityFragment"
    tools:showIn="@layout/activity_driver">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Driver Details"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:textStyle="bold" />

    <!--<EditText-->
    <!--android:id="@+id/dfirstname"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_marginTop="20dp"-->
    <!--android:ems="10"-->
    <!--android:hint="First Name"-->
    <!--android:inputType="textPersonName"-->
    <!--android:editable="true" />-->


    <EditText
        android:id="@+id/dfrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/ic_location_on_black_24dp"
        android:editable="true"
        android:hint="From" />

    <EditText
        android:id="@+id/dto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@mipmap/ic_location_on_black_24dp"
        android:editable="true"
        android:hint="To" />

    <EditText
        android:id="@+id/dmodel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/ic_drive_eta_black_24dp"
        android:editable="true"
        android:hint=" Car Model" />

    <EditText
        android:id="@+id/dlicense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@mipmap/ic_credit_card_black_24dp"
        android:editable="true"
        android:hint=" License ID" />

    <DatePicker
        android:id="@+id/datepicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <EditText
        android:id="@+id/ddate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:hint="Date"
        android:drawableLeft="@mipmap/ic_date_range_black_24dp"
        android:editable="true"
        android:ems="44" />


    <Button
        android:id="@+id/dbutton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="114dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:text="Submit"
        android:textStyle="bold" />
</LinearLayout>

